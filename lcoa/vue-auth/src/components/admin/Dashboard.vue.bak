      } catch (err) {
        lcoaError.value = err.response?.data?.message || err.message || 'è·å–æ•°æ®å¤±è´¥'
        lcoaTableData.value = []
      } finally {
        lcoaLoading.value = false
      }
    }
    
    const fetchXiangxiLatestData = async () => {
      xiangxiLoading.value = true
